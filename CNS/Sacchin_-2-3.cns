[Statedef -2]
type = U

;---------------------------------------------------------------------------
;	ヘルパーの常時処理 & ステート固定関係
;---------------------------------------------------------------------------

[State -2, ChangeState]
type = SelfState
trigger1 = IsHelper(99999)
value = 99999
ignorehitpause = 1

[State -2, ChangeState]
type = SelfState
trigger1 = IsHelper(4999)
value = 4999
ignorehitpause = 1

[State -2, Helper時間測定用変数]
type = varset
trigger1 = IsHelper
sysvar(0) = sysvar(0) + 1
ignorehitpause = 1

[State -2, 影消し]
type = AssertSpecial
trigger1 = 1
flag = Noshadow
ignorehitpause = 1

[State -2 ,Explod関係]
type = SelfState
trigger1 = IsHelper(4107)||IsHelper(4109)
trigger1 = var(59) := 4107
trigger2 = IsHelper(4108)
trigger2 = var(59) := 4108
trigger3 = IsHelper(4115)||IsHelper(4116)
trigger3 = var(59) := 4115
trigger4 = IsHelper(4133)||IsHelper(4146)
